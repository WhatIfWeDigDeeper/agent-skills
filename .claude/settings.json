{
  "permissions": {
    "allow": [
      "Bash",
      "Read(*)",
      "Edit(*)",
      "Search(*)",
      "Glob(*)",
      "Grep(*)"
    ],
    "deny": [
      "Read(.env*)",
      "Write(.env*)",
      "Edit(.env*)",
      "Bash(rm -rf /)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)"
    ],
    "defaultMode": "acceptEdits"
  },
  "enabledPlugins": {
    "security-guidance@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowUnixSockets": [
        "/var/run/docker.sock"
      ],
      "allowLocalBinding": true
    },
    "excludedCommands": [
      "gh",
      "git",
      "npm",
      "npx"
    ]
  }
}
